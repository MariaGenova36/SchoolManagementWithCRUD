<Window x:Class="SchoolManagementWPF.EnrollmentsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enrollment" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Select Student:" Margin="0,0,0,5"/>
        <ComboBox x:Name="StudentComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Height="30"/>

        <TextBlock Text="Select Subject:" Margin="10,10,0,5"/>
        <ComboBox x:Name="SubjectComboBox" DisplayMemberPath="Title" SelectedValuePath="Id" Height="30"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
